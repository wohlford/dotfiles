[user]
	name = Jason Wohlford
	email = jason@wohlford.org
	signingkey = 0x05A1685D6046396F

[commit]
	# Sign all commits with GPG key
	gpgsign = true

[tag]
	# Sign all tags with GPG key
	gpgsign = true

[init]
	# Set 'main' as the default branch for new repositories
	defaultBranch = main

[core]
	# Set Vim as the default editor for Git
	editor = vim

	# Convert CRLF to LF on input, preserving LF
	autocrlf = input

	# Prevent CRLF conversion errors
	safecrlf = true

[push]
	# Use simple pushing strategy (current branch to matching remote branch)
	default = simple
	followTags = true

[filter "lfs"]
	# Auto-generated by git lfs install
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[alias]
	# Shorter commands (SVN shorthand convention, via Pro Git)
	co = checkout
	ci = commit
	st = status
	br = branch

	# Detailed log view
	hist = log --graph --pretty=format:'%Cgreen%ad%Creset %Cred%h%Creset %s%C(yellow)%d' --date=short
	history = hist

	# Show the type of an object (Pro Git, "Git Internals")
	type = cat-file -t

	# Display content of an object (Pro Git, "Git Internals")
	dump = cat-file -p

	# Interactive patch adding
	patch = add --patch

	# Show changes added to the cache/index
	cache = diff --cached

	# Show the most recent commit
	last = log --oneline -1 --decorate

	# Undo a git add
	unstage = reset HEAD --

	# List tags by version order
	tags = tag -l --sort=-version:refname

[pull]
	rebase = true

[color]
	# Enable colored output in the command line interface
	ui = true
